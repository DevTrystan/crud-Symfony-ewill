{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1 class="text-center border-bottom border-success mt-3">Catalogue des produits</h1>

<div class="jumbotron d-flex justify-content-center mt-3 mb-3">
    <div class="container">
        <input type="text" placeholder="Rechercher par référence" id="searchFilter" name="reference" class="input"></input>
        <button  class="btn1 btn btn-primary" onClick="searchByReference()">Rechercher</button>
    </div>

    <div class="price d-flex">
        <div class="col">
            <input type="text" placeholder="Recherche prix min" id="searchMinPrice" name="minPrice" class="input"></input>
            <input type="text" placeholder="Recherche prix max" id="searchMaxPrice" name="maxPrice" class="input"></input>
        </div>
        <button  class="btn btn-primary align-items-center" onClick="searchByPrice()">Rechercher</button>
    </div>
</div>

    <table class="table table-bordered ">
        <thead class="bg-secondary text-light text-center">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Reference</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody class="text-center">
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}€</td>
                <td>{{ product.description }}</td>
                <td>{{ product.reference }}</td>
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-secondary">Détails de l'article</a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning">Modifier le produit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="mt-3">
    <a href="{{ path('app_product_new') }}" class="text-decoration-none p-3 bg-success text-white rounded-pill">Ajouter un nouvel article</a>
    </div>
   
{% endblock %}
